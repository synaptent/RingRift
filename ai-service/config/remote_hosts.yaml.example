# RingRift Remote Hosts Configuration - EXAMPLE TEMPLATE
# Copy this to remote_hosts.yaml and fill in your actual host details
# THIS FILE SHOULD BE GITIGNORED after copying

# Standard SSH hosts (port 22, persistent storage)
standard_hosts:
  # Primary GPU for training (required)
  gpu_primary:
    ssh_host: "10.0.0.1"  # Your primary GPU server IP
    ssh_user: "ubuntu"
    remote_path: "~/ringrift/ai-service/data/games"
    role: "training,hp_tuning,tournament"
    cpus: 30
    memory_gb: 200
    has_gpu: true
    gpu_type: "H100"  # Or your GPU type

  # Additional training GPU (optional)
  gpu_secondary:
    ssh_host: "10.0.0.2"
    ssh_user: "ubuntu"
    remote_path: "~/ringrift/ai-service/data/games"
    role: "training,hp_tuning,tournament"
    cpus: 48
    memory_gb: 400
    has_gpu: true
    gpu_type: "H100"

  # Selfplay worker nodes (add as many as you have)
  selfplay_worker_1:
    ssh_host: "10.0.0.10"
    ssh_user: "ubuntu"
    remote_path: "~/ringrift/ai-service/data/games"
    role: "selfplay"
    cpus: 72
    memory_gb: 480
    has_gpu: true
    gpu_type: "GH200"

  selfplay_worker_2:
    ssh_host: "10.0.0.11"
    ssh_user: "ubuntu"
    remote_path: "~/ringrift/ai-service/data/games"
    role: "selfplay"
    cpus: 72
    memory_gb: 480
    has_gpu: true
    gpu_type: "GH200"

# Cloud VM instances (Vast.ai, AWS, etc.) - optional
vast_hosts:
  cloud_gpu_1:
    host: "cloud-gpu-1"  # Tailscale hostname or IP
    port: 22
    user: "root"
    remote_path: "/workspace/ringrift/ai-service/data/games"
    role: "selfplay,tournament"
    cpus: 32
    memory_gb: 128
    has_gpu: true
    gpu_type: "RTX 4080"

# Sync configuration
sync:
  local_data_dir: "data/games"
  sync_subdir: "synced"
  ssh_timeout: 15
  auto_merge: true
  dedupe_by_game_id: true
  sync_target: "local"  # Options: "local", "gpu_primary", etc.

# Worker configuration
worker_defaults:
  games_per_worker: 100
  workers_2p: 10
  workers_3p: 5
  workers_4p: 3
  board_types:
    - square8
    - square19
    - hexagonal

# Training configuration
training:
  nn_host: "gpu_primary"
  nnue_host: "gpu_primary"
  hp_tuning_hosts:
    - "gpu_primary"
    - "gpu_secondary"
  selfplay_hosts:
    - "selfplay_worker_1"
    - "selfplay_worker_2"
  merged_db_path: "data/games/selfplay.db"
